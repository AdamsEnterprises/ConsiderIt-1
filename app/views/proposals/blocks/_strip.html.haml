- prompt ||= 'Read more and comment'


- carousel ||= false

.proposals{ :class => "#{style} horizontal" }
  - if carousel
    .paginate.first
      %button.back
        &#9664;
  .carousel{ :name => "proposals" }
    - proposals = get_proposals_by_rank.active
    - if proposals.count > 0
      %ul
        = render :partial => "proposals/blocks/item", :collection => proposals, :as => :proposal, :locals => { :show_full_text => false, :style => style, :hide_initially => hide_initially, :prompt => prompt }
      .clear
    - else
      There are currently no issues being discussed here. Please check back later.

  - if carousel

    .paginate.last
      %button.forward.not_ajax
        &#9654;
  .clear

